<div class="surgery">

  <div class="surgery-patient">
    Patient {{count}}
  </div>

  <div class="surgery-procedures">
    <p class="surgery-procedures-title">Choose surgery</p>
    <div class="select-area-options procedures">
    {{#each procedures}}
      <a class="btn select-area-option{{#active}} active{{/active}}" href="#" data-procedure="{{name}}">
        {{label}}
      </a>
    {{/each}}
  </div>

  <div class="surgery-canvas canvas-area">
    <div class="canvas-item canvas-item-before">
      <div class="canvas-item-inner">
        <div class="content">
          <canvas class="canvas-before"></canvas>
        </div>
      </div>
    </div>
    <div class="canvas-item">
      <div class="canvas-item-inner">
        <div class="content">
          <canvas class="canvas-after"></canvas>
        </div>
      </div>
    </div>
  </div>

  <div class="surgery-share share-area">
    <a href="#" class="btn btn-download" download="cosmicsurgery.png">Download</a>
    <a href="#" class="btn btn-share">Share</a>
  </div>

</div>
